{
	// Enforcing options
	"bitwise": false,
	"camelcase": true,
	"curly": true,
	"eqeqeq": true,
	"forin": false,
	"freeze": true,
	"immed": true,
	"latedef": true,
	"newcap": true,
	"noarg": true,
	"noempty": true,
	"nonew": true,
	"quotmark": "single",
	"strict": true,
	"trailing": true,
	"undef": true,
	"unused": "vars",

	// Relaxing options
	"laxbreak": true,
	"laxcomma": false,
	"scripturl": true,
	"shadow": true,
	"sub": true,
	"supernew": true,

	// Environment
	"browser": true,
	"dojo": true,

	// Legacy:
	"onevar": false,

	// Globals
	"globals": {
		"QUnit": false
	}
}
